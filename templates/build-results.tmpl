{{ define "build-results" }}
    <div id="build-results" class="container my-4 mx-auto px-4">
        <h3 class="text-3xl font-bold mb-4">Bundles to fit: {{ .RequestedBundleSize }}cm</h3>
        <div id="build-results-content" class="">
            {{ range .Bundles }}
                <div style="animation: fadeIn" class="bg-white rounded-lg p-4 mb-8">
                    <h2 class="text-2xl font-bold mb-4">{{ .Name }} {{ .Color }}</h2>
                    <ul>
                        <li>Total Bundle Price â‚¬{{ .Price }}</li>
                        <li>Width: {{ sizeRange .Width .Tolerance }} - {{ .Width }}cm</li>
                        <button class="bg-gray-800 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded">Add Bundle To Cart</button>
                    </ul>
                        <h3 class="py-4">Components</h3>
                        <div class="flex flex-wrap">
                            {{ range .Gates }}
                                {{ template "bundle-component-card" . }}
                            {{ end }}
                            {{ range .Extensions }}
                                {{ template "bundle-component-card" . }}
                            {{ end }}
                        </div>
                </div>
            {{ end }}
        </div>
    </div>
{{ end }}
