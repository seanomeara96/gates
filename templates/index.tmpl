{{ template "header.tmpl" }}


    <header class="py-20 bg-gray-100">
        <div class="container mx-auto px-4">
            <h1 class="text-5xl font-bold mb-2">Build Your Custom Pressure Gate</h1>
            <p class="text-gray-600 mb-8">Just enter the gap your desired width and we'll sort the rest out for you.</p>
            <form id="build-gate">
                <label for="desired-width" class="block mb-2">Your desired Width in cm</label>
                <input id="desired-width" name="desired-width" class="py-2 px-4 mr-4 mb-4 rounded" placeholder="e.g. 100" type="number" />
                <button class="bg-gray-800 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded">Build Gate</button>
            </form>
        </div>
    </header>

    <div id="build-results" class="container my-4 mx-auto px-4 hidden">
        <h2 class="text-3xl font-bold mb-4">Your Custom Bundles</h2>
        <div id="build-results-content" class="flex flex-wrap -mx-2">
            
        </div>
    </div>

    <div class="container my-4 mx-auto px-4">
        <h2 class="text-3xl font-bold mb-4">Featured Gates</h2>
        <div class="flex flex-wrap -mx-2">
            {{ range .FeaturedGates }}
                {{ template "product-card.tmpl" . }}
            {{ end }}
        </div>
    </div>  


    <div class="container my-4 mx-auto px-4">
        <h2 class="text-3xl font-bold mb-4">Popular Bundles</h2>
        <div class="flex flex-wrap -mx-2">
            {{ range .PopularBundles}}
                <a class="w-full md:w-1/2 lg:w-1/4 px-2 mb-4" href="/bundles/{{.Id}}">
                    <div class="bg-white rounded-lg overflow-hidden shadow-md">
                        <img src="https://via.placeholder.com/500x300" alt="Baby Safety Gate" class="w-full">
                        <div class="p-4">
                            <h3 class="font-bold mb-2">{{ .Name }}</h3>
                            <p class="text-gray-600 mb-4">
                                <ul>
                                    <li>Size: {{ .Size }}</li>
                                    <li>Colour: {{ .Color }}</li>
                                </ul>
                            </p>
                            <div class="flex justify-between items-center">
                                <span class="text-xl font-bold">â‚¬{{ .Price }}</span>
                                <button class="bg-gray-800 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded">Add to Cart</button>
                            </div>
                        </div>
                    </div>
                </a>
            {{ end }}
        </div>
    </div> 




{{ template "footer.tmpl" }}